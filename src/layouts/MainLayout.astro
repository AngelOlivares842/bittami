---
import '../../styles/global.css';
interface Props { title: string; }
const { title } = Astro.props;
---
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="bg-[#0f0c29] text-white overflow-x-hidden">
		<div class="fixed inset-0 -z-10 overflow-hidden">
			<div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-purple-900/30 blur-[120px] rounded-full"></div>
			<div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-blue-900/30 blur-[120px] rounded-full"></div>
		</div>
		<slot />
	</body>
</html>

<script>
  // Lógica para el modo EZquizo
  const toggleEzquizo = () => {
    document.body.classList.toggle('ezquizo-active');
    const isActive = document.body.classList.contains('ezquizo-active');
    console.log(isActive ? "⚠️ MODO EZQUIZO ACTIVADO" : "✨ Modo Chill activado");
  };

  // Exponer la función globalmente para el terminal
  window.toggleEzquizo = toggleEzquizo;
</script>

<style is:global>
  /* Filtro de color y vibración para el modo EZquizo */
  .ezquizo-active {
    filter: hue-rotate(45deg) saturate(1.2);
    transition: filter 0.5s ease;
  }

  .ezquizo-active .glass-card {
    animation: ezquizo-shake 0.5s infinite alternate ease-in-out;
  }

  @keyframes ezquizo-shake {
    0% { transform: translate(0,0) rotate(0deg); border-color: rgba(255,255,255,0.1); }
    100% { transform: translate(1px, 1px) rotate(0.1deg); border-color: var(--color-bitta-pink); }
  }
</style>